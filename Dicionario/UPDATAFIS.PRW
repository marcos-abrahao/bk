User Function UPDATAFIS()

Local   aSay      := {}
Local   aButton   := {}
Local   aMarcadas := {}
Local   cTitulo   := "Atualiza็ใo da data de fechamento fiscal - MV_DATAFIS"
Local   cDesc1    := "** Atualiza็ใo " + FIN_LAST_UPDATED
Local   cDesc2    := "" 
Local   cDesc3    := "" 
Local   cDesc4    := "" 
Local   cDesc5    := "" 
Local   lOk       := .F.

Private oMainWnd  := NIL
Private oProcess  := NIL
Private dDataFis  := dDataBase - DAY(dDataBase)

#IFDEF TOP
    TCInternal( 5, "*OFF" ) // Desliga Refresh no Lock do Top
#ENDIF

__cInterNet := NIL
__lPYME     := .F.

Set Dele On

// Mensagens de Tela Inicial
aAdd( aSay, cDesc1 )
aAdd( aSay, cDesc2 )
aAdd( aSay, cDesc3 )
aAdd( aSay, cDesc4 )
aAdd( aSay, "     ")
aAdd( aSay, cDesc5 )

// Botoes Tela Inicial
aAdd(  aButton, {  1, .T., { || lOk := .T., FechaBatch() } } )
aAdd(  aButton, {  2, .T., { || lOk := .F., FechaBatch() } } )

FormBatch(  cTitulo,  aSay,  aButton )

If lOk
	aMarcadas := EscEmpresa()

	If !Empty( aMarcadas )
		If  MsgNoYes( "Confirma a atualiza็ใo dos campos?", cTitulo )
			oProcess := MsNewProcess():New( { | lEnd | lOk := FSTProc( @lEnd, aMarcadas ) }, "Atualizando", "Aguarde, atualizando ...", .F. )
			oProcess:Activate()

			If lOk
				Final( "Atualiza็ใo Concluํda." )
			Else
				Final( "Atualiza็ใo nใo Realizada." )
			EndIf

		Else
			MsgStop( "Atualiza็ใo nใo Realizada.", "UPDBK" )

		EndIf

	Else
		MsgStop( "Atualiza็ใo nใo Realizada.", "UPDBK" )

	EndIf

EndIf

Return NIL

