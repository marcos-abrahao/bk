	RecLock( "SX6", .F. )

	cTexto += "Parametro " + SX6->X6_VAR + " conteudo: " + SX6->X6_CONTEUD + CRLF
	SX6->X6_CONTEUD := "20200930"
	cTexto += "Parametro " + SX6->X6_VAR + " conteudo alterado " + SX6->X6_CONTEUD + CRLF

	dbCommit()
	MsUnLock()
EndIf

